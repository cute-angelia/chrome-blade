{
  "name": "RemoveAd",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "福利站去广告，显示好孩子看不见",
  "homepage_url": "http://chenyunwen.cn/Caoliu.plug/",
  "icons": {
    "16": "src/img/icons/icon16.png",
    "48": "src/img/icons/icon48.png",
    "128": "src/img/icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "src/img/icons/icon48.png",
    "default_title": "RemoveAd"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "webRequest",
    "notifications",
    "*://*/*",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "css": [
        "src/css/inject.css"
      ]
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "js": [
        "src/js/vendor/jquery.min.js",
        "src/js/vendor/underscore.min.js",
        "src/js/inject.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
